# ---- Basic config (safe defaults; change for prod) ----
TZ=America/New_York

# Hugging Face (optional; leave blank if not needed)
HUGGINGFACE_TOKEN=

# ---- MinIO (local S3-compatible) ----
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=models
MINIO_REGION=us-east-1

MINIO_URL=http://minio:9000

MINIO_ENDPOINT=minio:9000       # or http://minio:9000
MINIO_SECURE=false
MINIO_BUCKET=models
MINIO_ALIAS=minio               # used as the mc alias name

# Optional prefix inside the bucket (e.g., org/project/date). Leave empty to upload at bucket root.
MINIO_KEY_PREFIX=
MINIO_ACCESS_KEY=${MINIO_ROOT_USER}
MINIO_SECRET_KEY=${MINIO_ROOT_PASSWORD}
MINIO_PREFIX=

# ---- External AWS S3 backup (optional) ----
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_S3_KEY_PREFIX=

# ---- Pipeline flags ----
DATA_DIR=/app/data
CACHE_DIR=/app/cache
OUT_DIR=/app/hf_models
DB_PATH=/app/db/models.db

# Upload each file to MinIO immediately during download (1=on, 0=off)
DIRECT_UPLOAD=1
REGISTRY_API_KEY=dev-please-change
REGISTRY_ADMIN_TOKEN=super-secret-admin-token